{
  "swagger": "2.0",
  "info": {
    "description": "API para manejar recetas",
    "version": "1.0.0",
    "title": "API de Recetas"
  },
  "host": "localhost:4500",
  "basePath": "/",
  "tags": [
    {
      "name": "recetas",
      "description": "Operaciones con Recetas"
    },
    {
      "name": "usuarios",
      "description": "Operaciones de Usuarios"
    }
  ],
  "schemes": ["http"],
  "paths": {
    "/recetas": {
      "get": {
        "tags": ["recetas"],
        "summary": "Obtener todas las recetas",
        "description": "Retorna todas las recetas disponibles",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Receta"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["recetas"],
        "summary": "Crear una nueva receta",
        "description": "Crea una nueva receta",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Objeto Receta que necesita ser añadido",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Receta"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Receta creada"
          }
        }
      }
    },
    "/recetas/{id}": {
      "get": {
        "tags": ["recetas"],
        "summary": "Encuentra una receta por ID",
        "description": "Retorna una receta única",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la receta a retornar",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "schema": {
              "$ref": "#/definitions/Receta"
            }
          },
          "404": {
            "description": "Receta no encontrada"
          }
        }
      },
      "put": {
        "tags": ["recetas"],
        "summary": "Actualizar una receta existente",
        "description": "Actualiza una receta",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Receta que necesita ser actualizada",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Receta"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Receta actualizada"
          }
        }
      },
      "delete": {
        "tags": ["recetas"],
        "summary": "Eliminar una receta",
        "description": "Elimina una receta por ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Receta eliminada"
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "tags": ["usuarios"],
        "summary": "Registrar un nuevo usuario",
        "description": "Crea un nuevo usuario en el sistema",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Datos del usuario a registrar",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario registrado exitosamente"
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": ["usuarios"],
        "summary": "Iniciar sesión",
        "description": "Iniciar sesión en el sistema",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Datos de inicio de sesión del usuario",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso"
          },
          "401": {
            "description": "Credenciales inválidas"
          }
        }
      }
    }
  },
  "definitions": {
    "Receta": {
      "type": "object",
      "required": ["nombre", "ingredientes", "instrucciones"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "nombre": {
          "type": "string"
        },
        "ingredientes": {
          "type": "string"
        },
        "instrucciones": {
          "type": "string"
        }
      }
    }
  },
  "User": {
    "type": "object",
    "required": ["username", "email", "password"],
    "properties": {
      "username": {
        "type": "string"
      },
      "email": {
        "type": "string"
      },
      "password": {
        "type": "string"
      }
    }
  },
  "Login": {
    "type": "object",
    "required": ["username", "password"],
    "properties": {
      "username": {
        "type": "string"
      },
      "password": {
        "type": "string"
      }
    }
  }
}
